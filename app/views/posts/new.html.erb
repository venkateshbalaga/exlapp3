<!-- Reply post form -->
<div id="newReply" class="forumInput">
  <div class="threadSubject"><h2>Reply</h2></div>
  <p><%= content_tag 'p', h(flash[:bad_reply]), :class => 'notice' if flash[:bad_reply] %></p>
  <p class="userPostHeading">You are replying to:
    <span class="bold">
      <!-- Display name of forum being replied to: -->
      <%= @topic.title %>
    </span>
  </p>
  <br />
  <% form_for :post, :url => posts_path(:forum_category_id => @forum_category, :forum_id => @forum, :topic_id => @topic) do |f| -%>
    <%= render :partial => "posts/form", :locals => { :f => f } %>
    <div class="left">
      <%= render_textile_help_box %>
      <div class="postButtons">
        <%= submit_tag "Post", :class => "button" %> 
        <%= link_to 'Cancel', forum_category_forum_topic_path(@forum_category, @forum, @topic) %>
      </div>    
    </div>
  <% end -%>
</div>