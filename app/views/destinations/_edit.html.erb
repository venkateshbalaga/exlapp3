<h2 class="page_header">Edit Destination</h2>
<div class="ipage destination_new">
  <% inline_remote_form_for :destination, @destination, :url => destination_path(@destination), :html => {:method => :put} do |f| %>
    <%= render_inside_panel_notifications_container %>
      <table>
        <tr>
          <td>Country:</td>
          <td><%= f.select :country, destination_country_selections %></td>
        </tr>
        <tr>
          <td>State:</td>
          <td><%= f.text_field :state %></td>
        </tr>
        <tr>
          <td>Cost:</td>
          <td><%= f.text_field :cost %></td>
        </tr>
      </table>
    <br class="clear"/>
    <div class="destination-form-buttons">
      <%= submit_tag "Create", :class=> "button" %>
      <%= link_to_function "Cancel", "xl.closeTabPanel('destinations_new_nil')" %>
    </div>
  <% end %>
</div>