<div class="forumEdit">
  <div class="threadSubject">
    <h2>Editing Category: <%= @forum_category.name %></h2>
  </div>
  <% form_for :forum_category, :url  => forum_category_path(@forum_category),
      :html => { :method => :put } do |f| -%>
    <%= render :partial => "forum_categories/form", :locals => { :f => f } %>
    <p class="inputArea">
      <%= submit_tag 'Save', :class => "button" %>
      <%= link_to('Cancel', forum_categories_path, :class => 'link_button') %>
    </p>
  <% end -%>
</div>